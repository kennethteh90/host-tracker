<div class="jumbotron">
  <h1>Please enter guest details</h1>
</div>

<div class="container">
  <div class="col-10">
    <%= simple_form_for(@guest, html: { class: 'form-horizontal' }) do |f| %>
      <%= f.input :name, label: 'Name & brief description', placeholder: 'Mark and Lisa from Indonesia GBI' %>
      <%= f.input :age, label: 'Age/Phase of life', placeholder: 'Both are in early 40s' %>
      <%= f.input :heard, label: 'How they heard about us', placeholder: 'through Instagram' %>
      <%= f.input :purpose, label: 'Purpose of Visit', placeholder: 'both of them are Indonesians, visiting for the first time today. Lisa is here to attend her friendâ€™s wedding and Husband Mark accompanies her. Decided to come check out HOGC while they are here. Flying back Jarkarta tomorrow.' %>
      <%= f.input :church, label: 'Church/Ministry/Level of commitment', placeholder: 'From Indonesia GBI church, Mark plays guitar for worship team, Lisa plays keyboard for worship team.' %>

      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary m-2" data-toggle="modal" data-target="#exampleModal">
        View Seating Plan
      </button>

      <!-- Modal -->
      <div class="modal fade modal-size" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Seating Plan</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= image_tag ("ImaginariumSeats.jpeg"), class: "img-fluid img-height" %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

      <%= f.input :whereseated, label: 'Seat', placeholder: 'B2 third row, first from K2' %>
      <%= f.input :description, label: 'Physical appearance description', placeholder: 'Mark is in blue polo and dark jeans' %>
      <%= f.input :hostconnected, label: 'Host(s) Connected', placeholder: 'Kenneth' %>
      <%= f.button :submit, class: "btn btn-success m-2" %>
    <% end %>
    <%= link_to 'Back to home', guests_path, class: "btn btn-primary m-2" %>
  </div>

</div>
